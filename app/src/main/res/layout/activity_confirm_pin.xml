<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    android:orientation="vertical"
    tools:context=".confirmPinActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/Teal_50">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/left_arrow_angle"
                    android:backgroundTint="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="กรุณายืนยัน PIN"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:textStyle="bold"

                        />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ตั้งค่ารหัส PIN"
                android:textColor="@color/Teal_50"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="กรุณารักษา PIN ของคุณให้เป็นความลับ"
                android:textColor="@color/teal_501"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pin1"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@drawable/design_circle"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/pin2"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@drawable/design_circle"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/pin3"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@drawable/design_circle"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/pin4"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@drawable/design_circle"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/pin5"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@drawable/design_circle"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/pin6"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@drawable/design_circle"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <RelativeLayout
                android:clickable="true"
                android:background="?selectableItemBackgroundBorderless"
                android:id="@+id/num1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/design_fram_circle1" />
                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/one"
                    android:backgroundTint="@color/Teal_50"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:clickable="true"
                android:background="?selectableItemBackgroundBorderless"
                android:id="@+id/num2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/design_fram_circle1" />
                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/two"
                    android:backgroundTint="@color/Teal_50"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:clickable="true"
                android:background="?selectableItemBackgroundBorderless"
                android:id="@+id/num3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/design_fram_circle1" />
                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/tree"
                    android:backgroundTint="@color/Teal_50"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <RelativeLayout
                android:clickable="true"
                android:background="?selectableItemBackgroundBorderless"
                android:id="@+id/num4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/design_fram_circle1" />
                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/four"
                    android:backgroundTint="@color/Teal_50"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:clickable="true"
                android:background="?selectableItemBackgroundBorderless"
                android:id="@+id/num5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/design_fram_circle1" />
                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/five"
                    android:backgroundTint="@color/Teal_50"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:clickable="true"
                android:background="?selectableItemBackgroundBorderless"
                android:id="@+id/num6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/design_fram_circle1" />
                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/six"
                    android:backgroundTint="@color/Teal_50"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <RelativeLayout
                android:clickable="true"
                android:background="?selectableItemBackgroundBorderless"
                android:id="@+id/num7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/design_fram_circle1" />
                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/seven"
                    android:backgroundTint="@color/Teal_50"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:clickable="true"
                android:background="?selectableItemBackgroundBorderless"
                android:id="@+id/num8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/design_fram_circle1" />
                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/eight"
                    android:backgroundTint="@color/Teal_50"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:clickable="true"
                android:background="?selectableItemBackgroundBorderless"
                android:id="@+id/num9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/design_fram_circle1" />
                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/nine"
                    android:backgroundTint="@color/Teal_50"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <RelativeLayout
                android:clickable="true"
                android:background="?selectableItemBackgroundBorderless"
                android:id="@+id/num10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="100dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/design_fram_circle1" />
                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/zero"
                    android:backgroundTint="@color/Teal_50"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/del"
                android:clickable="true"
                android:background="?selectableItemBackgroundBorderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
               >

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/design_fram_circle1" />
                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/close"
                    android:backgroundTint="@color/Teal_50"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>