<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    android:orientation="vertical"
    tools:context=".EditAddressOneActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="@color/Teal_50">
                        <LinearLayout
                            android:id="@+id/back"
                            android:clickable="true"
                            android:background="?selectableItemBackgroundBorderless"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_width="30dp"
                            android:padding="5dp"
                            android:layout_height="30dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/left_arrow_angle"
                                android:backgroundTint="@color/white" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="แก้ไขข้อมูลที่อยู่ตามบัตรประชาชน"
                                android:textColor="@color/white"
                                android:textSize="17sp"
                                android:textStyle="bold"

                                />

                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="30dp"
                        android:paddingTop="30dp"
                        android:paddingRight="30dp">

                        <EditText
                            android:id="@+id/numberass"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/design_fram"
                            android:hint="เลขที่อยู่"
                            android:inputType="text"
                            android:textColorHint="@color/gray_50"
                            android:textSize="16sp"
                            android:layout_marginBottom="13dp"
                            />
                        <EditText
                            android:id="@+id/mu"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/design_fram"
                            android:hint="หมู่/ชุมชน"
                            android:inputType="text"
                            android:textColorHint="@color/gray_50"
                            android:textSize="16sp"
                            android:layout_marginBottom="13dp"
                            />
                        <EditText
                            android:id="@+id/road"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/design_fram"
                            android:hint="ถนน"
                            android:inputType="text"
                            android:textColorHint="@color/gray_50"
                            android:textSize="16sp"
                            android:layout_marginBottom="13dp"
                            />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <Spinner
                                android:id="@+id/province"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginBottom="13dp"
                                android:background="@drawable/design_fram"
                                android:drawableEnd="@drawable/calendar"
                                android:drawableTint="@color/Teal_50"
                                android:hint="จังหวัด"
                                android:textColorHint="@color/gray_50"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/down"
                                android:backgroundTint="@color/Teal_50" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <Spinner
                                android:id="@+id/district"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginBottom="13dp"
                                android:background="@drawable/design_fram"
                                android:drawableEnd="@drawable/calendar"
                                android:drawableTint="@color/Teal_50"
                                android:hint="อำเภอ"
                                android:textColorHint="@color/gray_50"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/down"
                                android:backgroundTint="@color/Teal_50" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <EditText
                                android:id="@+id/tambon"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginBottom="13dp"
                                android:background="@drawable/design_fram"
                                android:drawableTint="@color/Teal_50"
                                android:hint="ตำบล"
                                android:textColorHint="@color/gray_50"
                                android:textSize="16sp" />


                        </RelativeLayout>

                        <EditText
                            android:id="@+id/numberpri"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/design_fram"
                            android:hint="รหัสไปรษณีย์"
                            android:inputType="number"
                            android:textColorHint="@color/gray_50"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_marginBottom="100dp"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/saveData"
                                android:layout_width="160dp"
                                android:layout_height="50dp"
                                android:background="@drawable/design_fram1"
                                android:text="บันทึก"
                                android:textColor="@color/white"
                                android:textSize="17sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>



            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/Teal_50">


                <include
                    android:id="@+id/bottomMenu"
                    layout="@layout/bottom_bar" />
            </RelativeLayout>


        </RelativeLayout>
    </LinearLayout>
</LinearLayout>