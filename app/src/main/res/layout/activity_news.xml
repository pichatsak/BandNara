                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="กิจกรรม......"
                                android:textColor="@color/Teal_50"
                                android:textSize="17sp"
                                android:gravity="center"/>
                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
